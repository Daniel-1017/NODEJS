  <%- include('../includes/navigation.ejs') %>
  <main class="centered">
      <h1><%= product.title %></h1>
      <hr>
      <div style="width: 50vw; margin: 0 auto">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" style="width: 100%; object-fit:cover">
